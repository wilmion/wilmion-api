{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "module": "CommonJS",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@entities/*": ["entities/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@dtos/*": ["dtos/*"],
      "@middlewares/*": ["middlewares/*"],
      "@Joi/*": ["Joi/*"],
      "@strategies/*": ["strategies/*"],
      "@models/*": ["models/*"],
      "@firebase/*": ["firebase/*"],
      "@swagger/*": ["swagger/*"]
    }
  }
}
